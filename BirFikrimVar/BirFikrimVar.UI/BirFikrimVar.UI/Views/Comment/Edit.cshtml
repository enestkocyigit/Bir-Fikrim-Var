@model BirFikrimVar.Entity.DTOs.CommentEditDto
@{
    ViewData["Title"] = "Yorumu Düzenle";
}

<h2 class="mb-3">Yorumu Düzenle</h2>

<!-- Genel hata özeti -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" method="post" class="mt-2">
    @Html.AntiForgeryToken()

    <!-- Zorunlu gizli alanlar -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdeaId" />

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Yorumunuzu yazın..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>

        <!-- İstersen geri dön butonu -->
        <a asp-controller="Idea"
           asp-action="Details"
           asp-route-id="@Model.IdeaId"
           class="btn btn-secondary">
            Vazgeç
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



