@model BirFikrimVar.Entity.DTOs.UserLoginDto
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="mx-auto form-wrapper" style="max-width:420px;">
        <h2 class="text-center mb-4">Giriş Yap</h2>

        <form asp-action="Login" asp-controller="Account" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input asp-for="Email" class="form-control mb-3" placeholder="E-posta" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="Password" type="password" class="form-control mb-3" placeholder="Şifre" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn btn-dark w-100">Giriş Yap</button>
        </form>

        <div class="mt-3 text-center">
            Hesabınız yok mu? <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

